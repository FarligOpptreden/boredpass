extends _layout

include mixins/time_picker
include mixins/photo_upload

block css
  link(rel='stylesheet', href='/css/listing.min.css')
  link(rel='stylesheet', href='/css/adding.min.css')

block js
  script(type='text/javascript', src='/js/adding.js')

block content
  input#listing(type='hidden', value=listing_id)
  section.banner
    div
      h1 Add a <strong>new activity</strong>
  section.listing-section.white
    div.wizard-instructions
      div.wizard-instructions-content
        p This is it, this is what it's all been building up to. Create your activity by filling in the fields below. We have kept this as simple as possible but still flexible enough to ensure your activity listing is as relevant and detailed enough as one may want. Remember, you can always edit your activity via your dashboard, even after you've submitted it, so don't stress if something changes. It's free and instant. BoredPass lives by the "KISS" principle, you know, Keep It Simple Stupid. :)
  section.listing-section.grey
    div.adding-content
      div.field-wrapper
        label(for='activity_name') Activity name, e.g. Awesome hike & abseil combo*
        input#activity_name.mandatory(type='text')
      div.field-wrapper.textarea
        label(for='activity_description') Describe the activity*
        textarea#activity_description.mandatory
      div.field-wrapper
        label(for='activity_tags') Add activity tags (e.g. Kayaking)*
        input#activity_tags.mandatory(type='text')
      div.tag-container
      div.field-wrapper
        label(for='activity_address') Activity address
        input#activity_address(type='text')
      div.checkbox-wrapper.prices
        div.checkbox-option
          label(for='price_kids') Kids (4-15)
          input#price_kids(type='checkbox')
        div.checkbox-option
          label(for='price_adults') Adult (16+)
          input#price_adults(type='checkbox')
        div.checkbox-option
          label(for='price_pensioners') Pensioner (65+)
          input#price_pensioners(type='checkbox')
        div.checkbox-option
          label(for='price_free') Free
          input#price_free(type='checkbox')
      div.field-wrapper.price_kids.hidden
        label(for='price_kids_value') Kids price from
        input#price_kids_value(type='number')
      div.field-wrapper.price_adults.hidden
        label(for='price_adults_value') Adult price from
        input#price_adults_value(type='number')
      div.field-wrapper.price_pensioners.hidden
        label(for='price_pensioners_value') Pensioner price from
        input#price_pensioners_value(type='number')
      h2 Trading Hours
      div.trading-hours
        div.day-time-wrapper
          div.checkbox-option
            label(for='day_monday') Monday
            input#day_monday(type='checkbox')
          +timePicker()#day_monday_from(disabled='disabled')
          +timePicker()#day_monday_to(disabled='disabled')
        div.day-time-wrapper
          div.checkbox-option
            label(for='day_tuesday') Tuesday
            input#day_tuesday(type='checkbox')
          +timePicker()#day_tuesday_from(disabled='disabled')
          +timePicker()#day_tuesday_to(disabled='disabled')
        div.day-time-wrapper
          div.checkbox-option
            label(for='day_wednesday') Wednesday
            input#day_wednesday(type='checkbox')
          +timePicker()#day_wednesday_from(disabled='disabled')
          +timePicker()#day_wednesday_to(disabled='disabled')
        div.day-time-wrapper
          div.checkbox-option
            label(for='day_thursday') Thursday
            input#day_thursday(type='checkbox')
          +timePicker()#day_thursday_from(disabled='disabled')
          +timePicker()#day_thursday_to(disabled='disabled')
        div.day-time-wrapper
          div.checkbox-option
            label(for='day_friday') Friday
            input#day_friday(type='checkbox')
          +timePicker()#day_friday_from(disabled='disabled')
          +timePicker()#day_friday_to(disabled='disabled')
        div.day-time-wrapper
          div.checkbox-option
            label(for='day_saturday') Saturday
            input#day_saturday(type='checkbox')
          +timePicker()#day_saturday_from(disabled='disabled')
          +timePicker()#day_saturday_to(disabled='disabled')
        div.day-time-wrapper
          div.checkbox-option
            label(for='day_sunday') Sunday
            input#day_sunday(type='checkbox')
          +timePicker()#day_sunday_from(disabled='disabled')
          +timePicker()#day_sunday_to(disabled='disabled')
      h2 Add Photos & Videos
      div.add-photos
        +photoUpload()(data-url='/content/upload')
      div.button-wrapper
        button#post-activity.button.dark.large-top-margin Post Activity