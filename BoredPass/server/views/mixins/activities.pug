mixin activities(data, editable)
  if (data && data.length) || editable
    section.listing-section.activities-overview&attributes(attributes)
      div
        h1 Activities Offered
        each activity, index in data
          - var className = activity.icon.toLowerCase().replace(/ /g, '-')
          div.activity
            span.activity.icon.colour(class=className)
            span=activity.name